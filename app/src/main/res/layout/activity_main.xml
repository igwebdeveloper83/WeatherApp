<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="223dp"
        android:layout_marginTop="20sp"
        android:scaleType="centerCrop"
        android:src="@drawable/clouds_image" />

    <TextView
        android:id="@+id/text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:layout_marginTop="20sp"
        android:text="@string/text_view"
        android:textAlignment="center"
        android:textColor="@color/text_font_view"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/text_input"
        android:layout_width="279dp"
        android:layout_height="51dp"
        android:layout_below="@id/text_view"
        android:layout_marginHorizontal="70sp"
        android:layout_marginTop="20sp"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:background="@drawable/edit_input"
        android:ems="10"
        android:hint="@string/text_hint_name"
        android:textAlignment="center"
        android:inputType="textPersonName"
        android:textColorHint="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/button_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_input"
        android:layout_marginHorizontal="120sp"
        android:layout_marginTop="40sp"
        android:background="@drawable/button"
        android:backgroundTint="#609DCC"
        android:text="@string/button_1_text" />

    <TextView
        android:id="@+id/text_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_1"
        android:layout_marginHorizontal="100sp"
        android:layout_marginTop="20sp"
        android:textAlignment="center"
        android:textColor="@color/text_font_view"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view2"
        android:layout_marginHorizontal="70sp"
        android:layout_marginTop="20sp" />

    <TextView
        android:id="@+id/text_view3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon"
        android:layout_marginTop="10sp"
        android:layout_marginHorizontal="80sp"
        android:textAlignment="center"
        android:textColor="@color/text_font_view"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/text_view6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view3"
        android:layout_marginTop="10sp"
        android:layout_marginHorizontal="80sp"
        android:textAlignment="center"
        android:textColor="@color/text_font_view"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


</RelativeLayout>